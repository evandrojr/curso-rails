<% form_for(@post) do |f| %>
  <legend>Editing post</legend>

  <%= f.error_messages %>

  <%= f.label :title %>
  <%= f.text_field :title, :class=> "input-xxlarge" %>
  <%= f.label :content %>
  <%= f.text_area :content, :class=> "input-xxlarge" %>

  <br/>

  <%= f.submit "Update", :class => 'btn btn-primary btn-large' %>
  <%= link_to 'Show', @post %> |
  <%= link_to "Back", posts_path %>
    
<% end %>