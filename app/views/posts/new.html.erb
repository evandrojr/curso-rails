<% form_for(@post, :html => {:class =>  ""}) do |f| %>
  <%= f.error_messages %>
  <legend>New Post</legend>
    <%= f.label :title %>
    <%= f.text_field :title, :class => "input-xxlarge" %>
    <%= f.label :content %>
    <%= f.text_area :content , :class => "input-xxlarge"%>
    <br/>
    <%= f.submit 'Create', :class => "btn btn-primary btn-large" %>
    <%= link_to 'Back', posts_path , :class => "btn btn-link" %>
<% end %>